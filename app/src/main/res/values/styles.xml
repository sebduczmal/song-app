<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="DetailsMiscText">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/details_misc_info_text_size</item>
        <item name="android:paddingBottom">@dimen/details_item_padding_bottom</item>
    </style>

    <style name="SongItemSecondaryInfoText">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/item_subtitle_text_size</item>
    </style>

    <style name="FilterSpinner">
        <item name="android:paddingBottom">@dimen/spinner_padding_vertical</item>
        <item name="android:paddingTop">@dimen/spinner_padding_vertical</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>
</resources>
